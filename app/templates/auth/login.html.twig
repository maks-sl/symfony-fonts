{% extends 'auth.html.twig' %}
{% block title %}Login{% endblock %}
{% block body %}
    <div class="col-md-8">
        {% include '_flashes.html.twig' %}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="card-group">
            <div class="card p-4">
                <div class="card-body">
                    <form method="post">
                        <h1>Login</h1>
                        <p class="text-muted">Sign In to your account</p>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <span class="c-icon cil-user"></span>
                                </span>
                            </div>
                            <input class="form-control" type="email" value="{{ last_username }}" name="email" placeholder="Email" required autofocus>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <span class="c-icon cil-lock-locked"></span>
                                </span>
                            </div>
                            <input class="form-control" type="password" name="password" placeholder="Password" required>
                        </div>
                        <div class="form-check checkbox mb-4">
                            <input class="form-check-input" name="_remember_me" type="checkbox" id="remember_me">
                            <label class="form-check-label" for="remember_me">Remember me</label>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="row">
                            <div class="col-6">
                                <button class="btn btn-primary px-4" type="submit">Login</button>
                            </div>
                            <div class="col-6 text-right">
                                <a class="btn btn-link px-0" type="button" href="{{ path('auth.reset.request') }}">Forgot password?</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                <div class="card-body text-center">
                    <div>
                        <h2>Sign up</h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                        <a class="btn btn-lg btn-outline-light mt-3" type="button" href="{{ path('auth.signup.request') }}">Register Now!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}